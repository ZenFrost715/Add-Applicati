workflows:
  default-workflow:
    name: Flutter Build
    max_build_duration: 60
    environment:
      flutter: stable
      vars:
        ANDROID_KEYSTORE_PASSWORD: EntraAquiSuaSenhaKeystore
        ANDROID_KEY_PASSWORD: EntraAquiSuaSenhaKey
        ANDROID_KEYSTORE: keystore.jks
    scripts:
      - name: Install dependencies
        script: |
          flutter pub get
      - name: Run tests
        script: |
          flutter test
      - name: Build Android
        script: |
          flutter build apk --release
      - name: Build iOS
        script: |
          flutter build ios --release --no-codesign
    artifacts:
      - build/app/outputs/flutter-apk/app-release.apk
      - build/ios/ipa/*.ipa
    publishing:
      email:
        recipients:
          - teuemail@exemplo.com
